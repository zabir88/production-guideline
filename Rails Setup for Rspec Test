Rspec TESTS:
 
#Add GEMs:
group :developement, :test do
  gem 'rspec-rails', '~> 3.0.0'
  gem 'factory_girl_rails'
end
group :test do
  gem 'faker'
  gem 'capybara'
  gem 'daabase_cleaner'	
end

#Rspec install: 
$rails generate rspec:install

#Configure Capybara in spec/rails_helper.rb 
add require 'capybara/rails'

#Include the factory_girl methods in spec/rails_helper.rb  
under RSpec.configure add
config.include FactoryGirl::Syntax::Methods

#Configure database_cleaner in spec/rails_helper.rb
under RSpec.configure add
config.before(:suite) do 
  DatabaseCleaner.clean_with(:truncation)
end
config.before(:each) do
  DatabaseCleaner.strategy = :transaction
end
config.before(:each, :js => true) do
  DatabaseCleaner.strategy = :truncation
end
config.before(:each) do
  DatabaseCleaner.start
end
config.after(:each) do
  DatabaseCleaner.clean
end

#Set up test data using Faker in factories:
In spec/factories/[name_of_relation].rb add
require 'faker'
FactoryGirl.define do
  factory :name_of_model do 
    attribute 1   { Faker::}
    attribute 2   { Faker::}
  end
end 

#Testing model:
In spec/models/model_name_spec.rb add
require 'rails_helper'

#Testing controller:
In spec/controllers/modelnameinplural_controller_spec.rb add
require 'rails_helper' 



  





  



